{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2015"],
    "module": "CommonJS",
    "esModuleInterop": false,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "mocha", "chai"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "strictFunctionTypes": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
